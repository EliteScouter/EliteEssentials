$C = "../Common.ui";
$E = "EliteEssentials_Shared.ui";

Group {
  LayoutMode: Left;
  Anchor: (Left: 2, Right: 2, Bottom: 4, Height: 42);
  Background: $C.@InputBoxBackground;
  Padding: (Top: 4, Bottom: 4, Left: 10, Right: 10);

  Label #RequesterName {
    Style: (
      FontSize: 15,
      RenderBold: true,
      TextColor: #ffcc4d,
      HorizontalAlignment: Start,
      VerticalAlignment: Center
    );
    FlexWeight: 1;
    Anchor: (Left: 0, Right: 10, Top: 0, Bottom: 0);
  }

  Group #PendingActions {
    LayoutMode: Right;
    Anchor: (Right: 0, Width: 180);

    $E.@EECancelSmallTextButton #DenyButton {
      @Anchor = (Width: 70, Right: 8);
      Text: "Deny";
    }

    $E.@EEPrimarySmallTextButton #AcceptButton {
      @Anchor = (Width: 90);
      Text: "Accept";
    }
  }
}
